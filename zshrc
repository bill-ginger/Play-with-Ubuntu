# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/jht/software/anaconda/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/jht/software/anaconda/etc/profile.d/conda.sh" ]; then
        . "/home/jht/software/anaconda/etc/profile.d/conda.sh"
    else
        export PATH="/home/jht/software/anaconda/bin:$PATH"
    fi
fi
unset __conda_setup
